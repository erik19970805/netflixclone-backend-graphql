{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "@typescript-eslint"],
  "rules": {},
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      },
      "typescript": { "alwaysTryTypes": true, "project": "./tsconfig.json" }
    }
  }
}
